{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": { "*": ["node_modules"] },
		"target": "es2016",
		"module": "commonjs",
        "jsx": "react",
		"moduleResolution": "node",
        "noImplicitReturns": true,
        "noImplicitAny": true,
		"esModuleInterop": true,
		"noUnusedParameters": true,
		"allowSyntheticDefaultImports": true
	},
    "include": [
        "./src/**/*",
        "./server/**/*"
    ]
}

