{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": { "*": ["node_modules"] },
		"target": "es2016",
		"module": "esnext",
		"jsx": "react",
		"allowJs": true,
		"checkJs": true,
		"moduleResolution": "node",
		"noImplicitReturns": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"noUnusedParameters": true,
		"allowSyntheticDefaultImports": true
	},
	"include": [
		"./src/**/*.tsx",
		"./src/**/*.ts",
		"./server/**/*"
	]
}
